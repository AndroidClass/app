<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzptc.niupei.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:id="@+id/tabbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="horizontal">
            <RadioButton
                style="@style/radioBtn"
                android:singleLine="true"
                android:drawableTop="@mipmap/home"
                android:textColor="@drawable/textcolor_select"
                android:text="首页"/>
            <RadioButton
                style="@style/radioBtn"
                android:singleLine="true"
                android:drawableTop="@mipmap/more"
                android:textColor="@drawable/textcolor_select"
                android:text="类目"/>
            <RadioButton
                style="@style/radioBtn"
                android:singleLine="true"
                android:drawableTop="@mipmap/search"
                android:textColor="@drawable/textcolor_select"
                android:text="搜索"/>
            <RadioButton
                style="@style/radioBtn"
                android:singleLine="true"
                android:drawableTop="@mipmap/car"
                android:textColor="@drawable/textcolor_select"
                android:text="车型"/>
            <RadioButton
                style="@style/radioBtn"
                android:singleLine="true"
                android:drawableTop="@mipmap/my"
                android:textColor="@drawable/textcolor_select"
                android:text="我的"/>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
